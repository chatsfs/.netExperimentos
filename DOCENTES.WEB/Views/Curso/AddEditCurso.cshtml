@model DOCENTES.WEB.ViewModel.CursosViewModel.AddEditCursoViewModel
@{
    ViewBag.Title = "Curso";
    ViewBag.SubTitle = Model.cursoID.HasValue ? "Editar" : "Agregar";
    ViewBag.Section = "Curso";
}

<!-- Vertical Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h1>
                    <i class="material-icons">library_books</i>
                    @ViewBag.SubTitle @ViewBag.Title
                </h1>
            </div>
            <div class="body">
                <form method="post" action="@Url.Action("AddEditCurso", "Curso")">
                    @if (Model.cursoID.HasValue)
                    {
                        @Html.HiddenFor(x => x.cursoID)
                        @Html.HiddenFor(x => x.tieneValor, true)
                    }
                    
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectCurso.nombrecurso, new { @class = "form-control", @id="curso", @type="text" })
                            <label class="form-label">Curso</label>
                        </div>
                       
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectCurso.credito, new { @class = "form-control", @id = "credito", @type = "number", @value="" })
                            <label class="form-label">Créditos</label>
                        </div>
                        
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">GUARDAR</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Vertical Layout | With Floating Label -->

<script src="@Url.Content("~/Content/plugins/jquery/jquery.min.js")"></script>
<!-- Bootstrap Core Js -->
<script src="@Url.Content("~/Content/plugins/bootstrap/js/bootstrap.js")"></script>
<!-- Select Plugin Js -->
<script src="@Url.Content("~/Content/plugins/bootstrap-select/js/bootstrap-select.js")"></script>
<!-- Slimscroll Plugin Js -->
<script src="@Url.Content("~/Content/plugins/jquery-slimscroll/jquery.slimscroll.js")"></script>
<!-- Waves Effect Plugin Js -->
<script src="@Url.Content("~/Content/plugins/node-waves/waves.js")"></script>
<!-- Custom Js -->
<script src="@Url.Content("~/Content/js/admin.js")"></script>
<!-- Demo Js -->
<script src="@Url.Content("~/Content/js/demo.js")"></script>


