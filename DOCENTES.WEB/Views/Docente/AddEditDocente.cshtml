@model DOCENTES.WEB.ViewModel.DocentesViewModel.AddEditDocenteViewModel
@{
    ViewBag.Title = "Docente";
    ViewBag.SubTitle = Model.docenteID.HasValue ? "Editar" : "Agregar";
    ViewBag.Section = "Docente";
}

<!-- Vertical Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h1>
                    <i class="material-icons">library_books</i>
                    @ViewBag.SubTitle @ViewBag.Title
                </h1>
            </div>
            <div class="body">
                <form method="post" action="@Url.Action("AddEditDocente", "Docente")">
                    @if (Model.docenteID.HasValue)
                    {
                        @Html.HiddenFor(x => x.docenteID)
                        @Html.HiddenFor(x => x.tieneValor, true)
                    }                    
                    <label for="nombre">Nombres</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.nombres, new { @class = "form-control", @id = "nombre", @type = "text", @placeholder="Nombres del Docente. Ejm Roberto" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.nombres, "", new { @class = "text-danger" })
                    </div>

                    <label for="apellidop">Apellido Paterno</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.apellidopaterno, new { @class = "form-control", @id = "apellidop", @type = "text", @placeholder = "Apellido Paterno del Docente. Ejm Fernández" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.apellidopaterno, "", new { @class = "text-danger" })
                    </div>

                    <label for="apellidom">Apellido Materno</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.apellidomaterno, new { @class = "form-control", @id = "apellidom", @type = "text", @placeholder = "Apellido Materno del Docente. Ejm Zavala" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.apellidomaterno, "", new { @class = "text-danger" })
                    </div>

                    <label>Tipo de Documento</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.DropDownListFor(x => x.objectDocente.tipodocumentoID, new SelectList(Model.ListDocumento, "tipodocumentoID", "descripcion"), "Seleccione un Tipo de Documento", new { @class = "form-control show-tick" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.tipodocumentoID, "", new { @class = "text-danger" })
                    </div>

                    <label for="documento">Documento</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.documento, new { @class = "form-control", @id = "documento", @type = "text", @placeholder = "Documento de identidad del docente." })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.documento, "", new { @class = "text-danger" })
                    </div>

                    <label for="fnacimiento">Fecha de Nacimiento</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.fechanacimiento, new { @class = "form-control", @id = "fnacimiento", @type = "date", @placeholder = "Fecha de Nacimiento del Docente. Ejm 28/11/1985" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.fechanacimiento, "", new { @class = "text-danger" })
                    </div>

                    <label for="fnacimiento">Fecha de Contratación</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.fechacontratacion, new { @class = "form-control", @id = "fnacimiento", @type = "date", @placeholder = "Fecha de Contratación del Docente. Ejm 08/05/2017" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.fechacontratacion, "", new { @class = "text-danger" })
                    </div>

                    <label>Grado de Instrucción</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.DropDownListFor(x => x.objectDocente.gradoinstruccionID, new SelectList(Model.ListGrado, "gradoinstruccionID", "descripcion"), "Seleccione un grado de instrucción", new { @class = "form-control show-tick" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.gradoinstruccionID, "", new { @class = "text-danger" })
                    </div>

                    <label>Cursos</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.DropDownListFor(x => x.objectDocente.cursoID, new SelectList(Model.ListCurso, "cursoID", "nombrecurso"), "Seleccione un Curso", new { @class = "form-control show-tick" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.cursoID, "", new { @class = "text-danger" })
                    </div>

                    <label for="telefono">Telefono</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.telefono, new { @class = "form-control", @id = "telefono", @type = "text", @placeholder = "Número de teléfono del Docente. Ejm 982034332" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.telefono, "", new { @class = "text-danger" })
                    </div>

                    <label for="correo">Correo</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.correo, new { @class = "form-control", @id = "correo", @type = "text", @placeholder = "Correo del Docente. Ejm ejemplo@abc.pe" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.correo, "", new { @class = "text-danger" })
                    </div>

                    <label for="direcc">Dirección</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectDocente.direccion, new { @class = "form-control", @id = "direcc", @type = "text", @placeholder = "Dirección del Docente. Ejm Av. Primavera" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectDocente.direccion, "", new { @class = "text-danger" })
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">GUARDAR</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Vertical Layout | With Floating Label -->

<script src="@Url.Content("~/Content/plugins/jquery/jquery.min.js")"></script>
<!-- Bootstrap Core Js -->
<script src="@Url.Content("~/Content/plugins/bootstrap/js/bootstrap.js")"></script>
<!-- Select Plugin Js -->
<script src="@Url.Content("~/Content/plugins/bootstrap-select/js/bootstrap-select.js")"></script>
<!-- Slimscroll Plugin Js -->
<script src="@Url.Content("~/Content/plugins/jquery-slimscroll/jquery.slimscroll.js")"></script>
<!-- Dropzone Plugin Js -->
<script src="@Url.Content("~/Content/plugins/dropzone/dropzone.js")"></script>
<!-- Input Mask Plugin Js -->
<script src="@Url.Content("~/Content/plugins/jquery-inputmask/jquery.inputmask.bundle.js")"></script>
<!-- Multi Select Plugin Js -->
<script src="@Url.Content("~/Content/plugins/multi-select/js/jquery.multi-select.js")"></script>
<!-- Jquery Spinner Plugin Js -->
<script src="@Url.Content("~/Content/plugins/jquery-spinner/js/jquery.spinner.js")"></script>
<!-- Bootstrap Tags Input Plugin Js -->
<script src="@Url.Content("~/Content/plugins/bootstrap-tagsinput/bootstrap-tagsinput.js")"></script>
